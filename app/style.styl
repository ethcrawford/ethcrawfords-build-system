@import 'styles/variables/_colors.styl'
@import 'styles/variables/_sizes.styl'
@import 'styles/variables/_initiator.styl'
@import 'styles/mixins/_rem.styl'
@import 'styles/mixins/_media.styl'
@import 'styles/mixins/_composer.styl'
body
  color: base_color
  font-size: rem(base_text_font-size)
+composer(baz-var)
  .baz
    width: rem(240px)
+composer(foo-var)
  .foo
    width: rem(240px)
    +wider(768px)
      width: rem(576px)
+composer(bar-var)
  .bar
    width: rem(240px)
  @media (min-width: 768px)
    .bar
      width: rem(576px)
